{
    "name": "py_sandpack",
    "version": "0.0.5",
    "description": "PySandpack is a web-based platform designed to provide a sandbox environment for executing Python code directly in the browser. It is ideal for educational purposes, quick experiments, or running Python scripts without requiring a local Python installation.",
    "module": "dist/py_sandpack.esm.js",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "dev": "parcel index.html",
        "build": "tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {
        "react": ">=16"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "size-limit": [
        {
            "path": "dist/py_sandpack.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/py_sandpack.esm.js",
            "limit": "10 KB"
        }
    ],
    "dependencies": {
        "@codemirror/lang-python": "^6.1.6",
        "@uiw/react-codemirror": "^4.23.6"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.1",
        "@size-limit/preset-small-lib": "^11.1.6",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "babel-plugin-module-resolver": "^5.0.2",
        "husky": "^9.1.7",
        "parcel": "^2.13.2",
        "process": "^0.11.10",
        "pyodide": "^0.26.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "size-limit": "^11.1.6",
        "tsconfig-paths": "^4.2.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.8.1",
        "typescript": "^3.9.10"
    }
}
